@page
@model DePool.Pages.Pools.Forecasts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Forecast</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Forecast.GameId" class="control-label"></label>
                <select asp-for="Forecast.GameId" class="form-control" asp-items="ViewBag.GameId"></select>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Forecast.HomeGoals" class="control-label">Goals Thuis</label>
                        <input asp-for="Forecast.HomeGoals" class="form-control" />
                        <span asp-validation-for="Forecast.HomeGoals" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Forecast.AwayGoals" class="control-label">Goals Uit</label>
                        <input asp-for="Forecast.AwayGoals" class="form-control" />
                        <span asp-validation-for="Forecast.AwayGoals" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Me" asp-route-poolId="@Model.PoolId">Terug naar mijn voorspellingen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

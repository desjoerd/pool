@page
@model DePool.Pages.Pools.Forecasts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Voorspelling: @Model.Forecast.Game.Home - @Model.Forecast.Game.Away</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Forecast.Id" />
            <input type="hidden" asp-for="Forecast.GameId" />
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Forecast.HomeGoals" class="control-label">@Model.Forecast.Game.Home</label>
                        <input asp-for="Forecast.HomeGoals" class="form-control" />
                        <span asp-validation-for="Forecast.HomeGoals" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Forecast.AwayGoals" class="control-label">@Model.Forecast.Game.Away</label>
                        <input asp-for="Forecast.AwayGoals" class="form-control" />
                        <span asp-validation-for="Forecast.AwayGoals" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Me" asp-route-poolId="@Model.Forecast.Game.PoolId">Terug naar mijn voorspellingen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
